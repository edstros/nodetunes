<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="icon" href="data:;base64,iVBORw0KGgo=">
  <meta charset="UTF-8">
  <title>
    <%= title %> | albums</title>
</head>
<body>
  <h1>Albums</h1>
  <a href="/albums/addalbum">Add new album</a>
  <table>
   <thead><tr>
     <td>Album Name </td>
     <td>Artist Name</td>
     <td>Year Released</td>
     <td>Action</td>
   </tr> <tbody>
      <% albums.forEach(function (album){ %>
        <tr>
          <td><%= album.name %></td>
          <td><%= album.artist %></td>
          <td><%= album.year %></td>
          <td>
          <form action="/delete/<%= album._id %>" method="POST">
           <input type="submit" value="Delete">
            </form>
          </td>
        </tr>
        <% }); %>
    </tbody></thead>
  </table>

</body>

</html>
